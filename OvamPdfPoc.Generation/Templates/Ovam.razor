@using System.Runtime.InteropServices
@using OvamPdfPoc.Models.Models
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ovam print</title>
    <style>
        * {
            font-family: sans-serif !important;
        }

        .page-break-inside-avoid {
            page-break-inside: avoid !important;
            -webkit-region-break-inside: avoid !important;
        }

        .title {
            border-bottom: 3px solid black;
            width: 75%;
        }

        .input-solid {
            border: 1px solid black;
            height: 2rem;
        }

        .input-dotted {
            border-bottom: 1px dotted black;
            height: 2rem;
        }

        .input-dotted-large {
            border-bottom: 1px dotted black;
            min-height: 3rem;
            height: auto;
        }

        .w-full {
            width: 100%;
        }

        .w-90 {
            width: 90%;
        }

        .w-75 {
            width: 75%;
        }

        .w-50 {
            width: 50%;
        }

        .w-40 {
            width: 40%;
        }

        .w-25 {
            width: 25%;
        }

        .w-20 {
            width: 20%;
        }

        .table-container {
            width: 100%;
            border-collapse: collapse;
        }

        .border-collapse-collapse {
            border-collapse: collapse
        }

        .table-header {
            border-bottom: 1px solid black;
            border-top: 1px solid black;
            padding: 0.5rem;
            margin: 0 0.5rem;
        }

        .pl-5 {
            padding-left: 5px;
        }

        .pr-10 {
            padding-right: 10px;
        }

        .p-30 {
            margin-top: 30px;
        }

        .py-1 {
            padding: 0.5rem 0;
        }

        .my-2 {
            margin: 2rem 0;
        }

        .section-title {
            margin-top: 2rem;
            background-color: grey;
            color: white;
            font-size: large;
            padding: 0.5rem 0.25rem;
            letter-spacing: 0.5px;
        }

        .label {
            width: 25%;
            text-align: end;
            padding-right: 10px;
        }

        .text-start {
            text-align: start;
        }

        .text-end {
            text-align: end;
        }

        .text-center {
            text-align: center;
        }

        .text-bold {
            font-weight: bold;
        }

        .vertical-align-bottom {
            vertical-align: bottom;
        }

        .vertical-align-middle {
            vertical-align: middle
        }

        .border-spacing-1 {
            border-spacing: 1rem 0;
        }

        .legend {
            display: -webkit-box;
            -webkit-box-orient: horizontal;
            -webkit-box-align: center;
            flex-wrap: nowrap;
            -webkit-box-pack: end;
        }

        .legend .text {
            -webkit-box-flex: 0;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            flex-wrap: nowrap;
            text-align: right;
            -webkit-box-align: end;
        }

        .legend .text span {
            text-align: right;
            font-size: 12px;
            display: -webkit-box;
        }

        .legend .icon {
            -webkit-box-flex: 0;
            padding: 0px 15px;
        }

        .legend .icon img {
            height: 30px;
            width: 30px;
        }

        .parent-fit {
            text-align: center;
            vertical-align: middle;
            height: 100px;
            border-style: inset;
            padding: 2px;
        }

        .image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .img-fit {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        /* Define styles for the note container */
        .note {
            border: 1px solid #ccc;
            background-color: #f9f9f9;
            padding: 2px;
            margin: 2px;
            border-radius: 5px;
            box-shadow: 1px 1px 2px #ccc;
        }
    </style>
</head>

<body>
<div>
    <table class="w-full border-collapse-collapse">
        <tr>
            <td colspan="2">
